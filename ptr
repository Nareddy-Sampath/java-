import java.util.Scanner;
class SimpleIntrest{
    int p;
    int t;
    int r;
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        
        SimpleIntrest si=new SimpleIntrest();
        si.p=sc.nextInt();
        si.t=sc.nextInt();
        si.r=sc.nextInt();
        
        int a=(si.p*si.t*si.r)/100;
        System.out.println(a);
    }
}